--glob=!*.min.css
--glob=!*.bundle.js
--glob=!*.bundle.css
--glob=!vendor/
--glob=!.venv/
--glob=!venv/
--glob=!__pycache__/
--glob=!*.pyc
--glob=!.pytest_cache/
--glob=!.mypy_cache/
--glob=!.DS_Store
--glob=!Thumbs.db
--glob=!*.log
--glob=!*.tmp
--glob=!*.swp
--glob=!*.swo
--glob=!*~
